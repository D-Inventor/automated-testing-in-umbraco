{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "Data Source=|DataDirectory|/Umbraco.sqlite.db;Cache=Shared;Foreign Keys=True;Pooling=True",
    "umbracoDbDSN_ProviderName": "Microsoft.Data.Sqlite"
  },
  "Umbraco": {
    "CMS": {
      // TypeFinder settings are configured here for running integration tests.
      // These lines are necessary to prevent boot-errors while running inside the xUnit testing harness
      // They don't work when they are moved into the integration testing project, so they have to stay here :/
      "TypeFinder": {
        "AdditionalAssemblyExclusionEntries": [
          "xunit.abstractions",
          "xunit.runner.visualstudio.testadapter",
          "Mono.Cecil",
          "xunit.v3.runner.utility.netcore"
        ],
        "AssembliesAcceptingLoadExceptions": "*"
      },
      "Content": {
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": true
      },
      "ModelsBuilder": {
        "ModelsMode": "SourceCodeManual",
        "ModelsDirectory": "~/umbraco/models/generated"
      }
    }
  }
}