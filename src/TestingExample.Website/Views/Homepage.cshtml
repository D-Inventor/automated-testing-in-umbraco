@using Umbraco.Cms.Web.Common.PublishedModels;
@model Homepage
@{
  Layout = null;
}
<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Hello, world!</title>
  <link href="/style.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body class="d-flex flex-column justify-content-between" style="min-height:100vh;">
  <nav class="navbar navbar-expand-lg border-bottom bg-white py-2 sticky-top">
    <div class="container">
      <a class="navbar-brand" href="#">Example site</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav_lc"
        aria-controls="nav_lc" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="nav_lc">
        <ul class="navbar-nav my-3 my-lg-0 ms-lg-3 me-auto">
          <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="#">About us</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Services</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Contact us</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="flex-fill">
    <header class="container py-4">
      <div class="row g-4">
        <div class="col-sm-6 align-self-center">
          <h1>@Model.Title</h1>
          <p>Effective business strategies, enabled by insight using our premium service.</p>
        </div>
        <div class="col-sm-6">
          <img src="/example-images/sky-scrapers-new-york.jpg" class="img-fluid" />
        </div>
      </div>
    </header>
    <section class="bg-light py-4">
      <div class="container">
        <h2>About our product</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <article class="card h-100">
              <img src="/example-images/nature-dandelions.jpg" class="card-img-top" />
              <div class="card-body d-flex flex-column">
                <h3 class="card-title">Pricing</h3>
                <p class="card-text">Find the right plan for your business</p>
                <a href="#" class="btn btn-link align-self-end mt-auto">Read the article</a>
              </div>
            </article>
          </div>
          <div class="col-md-4">
            <article class="card h-100">
              <img src="/example-images/natures-window.jpg" class="card-img-top" />
              <div class="card-body d-flex flex-column">
                <h3 class="card-title">Features</h3>
                <p class="card-text">Discover all the things you can do with our product</p>
                <a href="#" class="btn btn-link align-self-end mt-auto">Read the article</a>
              </div>
            </article>
          </div>
          <div class="col-md-4">
            <article class="card h-100">
              <img src="/example-images//natures-winter-bouquet.jpg" class="card-img-top" />
              <div class="card-body d-flex flex-column">
                <h3 class="card-title">Frequently asked questions</h3>
                <p class="card-text">Answers to the most popular questions about our service</p>
                <a href="#" class="btn btn-link align-self-end mt-auto">Read the article</a>
              </div>
            </article>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer class="border-top py-2">
    <div class="container">
      <p class="m-0">© 2025 Example company</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
</body>

</html>